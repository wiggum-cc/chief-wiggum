{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Pipeline Configuration",
  "description": "Defines a linear pipeline of agent steps with jump-based control flow",
  "type": "object",
  "required": ["name", "steps"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Pipeline name identifier"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/step"
      }
    }
  },
  "$defs": {
    "step": {
      "type": "object",
      "required": ["id", "agent"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_-]*$",
          "description": "Unique step ID used for result files and jump targets"
        },
        "agent": {
          "type": "string",
          "description": "Leaf agent name from lib/agents/"
        },
        "max": {
          "type": "integer",
          "minimum": 0,
          "default": 0,
          "description": "Max times this step can be visited (0 = unlimited)"
        },
        "on_max": {
          "type": "string",
          "default": "next",
          "description": "Jump target when max visits exceeded (default: next)"
        },
        "on_result": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/handler"
          },
          "description": "Per-result handlers mapping gate result values to actions"
        },
        "readonly": {
          "type": "boolean",
          "default": false,
          "description": "If true, git stash before and pop after agent to discard workspace changes"
        },
        "enabled_by": {
          "type": "string",
          "description": "Environment variable name; step runs only if var is 'true'"
        },
        "commit_after": {
          "type": "boolean",
          "default": false,
          "description": "Commit workspace changes after step completes"
        },
        "config": {
          "type": "object",
          "default": {},
          "description": "Per-step config available in pipeline-config.json for the agent to read"
        },
        "hooks": {
          "type": "object",
          "properties": {
            "pre": {
              "type": "array",
              "items": { "type": "string" },
              "default": [],
              "description": "Shell commands to run before agent"
            },
            "post": {
              "type": "array",
              "items": { "type": "string" },
              "default": [],
              "description": "Shell commands to run after agent"
            }
          }
        }
      }
    },
    "handler": {
      "oneOf": [
        { "$ref": "#/$defs/jump_handler" },
        { "$ref": "#/$defs/inline_agent_handler" }
      ]
    },
    "jump_handler": {
      "type": "object",
      "required": ["jump"],
      "properties": {
        "jump": {
          "type": "string",
          "description": "Jump target: self, prev, next, abort, or a step ID"
        }
      },
      "additionalProperties": false
    },
    "inline_agent_handler": {
      "type": "object",
      "required": ["id", "agent"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_-]*$",
          "description": "Unique handler step ID used for result files"
        },
        "agent": {
          "type": "string",
          "description": "Agent to run for this handler"
        },
        "max": {
          "type": "integer",
          "minimum": 0,
          "default": 0,
          "description": "Max times this inline handler can fire (global for workflow, 0 = unlimited)"
        },
        "on_max": {
          "type": "string",
          "default": "next",
          "description": "Jump target when inline handler max exceeded (default: next)"
        },
        "on_result": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/handler"
          },
          "description": "Per-result handlers for the inline agent"
        },
        "readonly": {
          "type": "boolean",
          "default": false,
          "description": "Git checkpoint for inline agent"
        },
        "commit_after": {
          "type": "boolean",
          "default": false,
          "description": "Commit after inline agent completes"
        },
        "config": {
          "type": "object",
          "default": {},
          "description": "Config for inline agent"
        }
      }
    }
  }
}
