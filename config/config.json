{
  "git": {
    "author_name": "Ralph Wiggum",
    "author_email": "ralph@wiggum.cc"
  },
  "claude": {
    "max_retries": 3,
    "initial_backoff_seconds": 5,
    "max_backoff_seconds": 60,
    "backoff_multiplier": 2
  },
  "workers": {
    "max_iterations": 50,
    "sleep_seconds": 2,
    "fix_worker_limit": 4
  },
  "hooks": {
    "enabled": true,
    "worker_hooks": "${CHIEF_HOME}/hooks/worker-hooks.json"
  },
  "paths": {
    "ralph_dir": ".ralph",
    "kanban_file": "kanban.md",
    "results_dir": "results",
    "workers_dir": "workers",
    "logs_dir": "logs"
  },
  "rate_limit": {
    "threshold_prompts": 22000,
    "threshold_boundary": 1769349244
  },
  "runtime": {
    "backend": "claude",
    "backends": {
      "claude": {
        "binary": "claude",
        "max_retries": 3,
        "initial_backoff": 5,
        "max_backoff": 60,
        "backoff_multiplier": 2,
        "prompts": {
          "pre_system": "",
          "post_system": "",
          "pre_user": "",
          "post_user": ""
        }
      }
    }
  },
  "github": {
    "issue_sync": {
      "enabled": true,
      "allowed_user_ids": [123998984,124862625,124581466],
      "label_filter": "wiggum",
      "priority_labels": {
        "priority:critical": "CRITICAL",
        "priority:high": "HIGH",
        "priority:medium": "MEDIUM",
        "priority:low": "LOW"
      },
      "default_priority": "MEDIUM",
      "status_labels": {
        "wiggum:in-progress": "=",
        "wiggum:pending-approval": "P",
        "wiggum:failed": "*",
        "wiggum:completed": "x",
        "wiggum:not-planned": "N"
      },
      "close_on": ["x"],
      "auto_create": true
    }
  },
  "log_rotation": {
    "enabled": true,
    "max_lines": 10000,
    "max_archives": 10
  },
  "resume": {
    "max_attempts": 5,
    "cooldown_seconds": 3600,
    "initial_bonus": 20000,
    "fail_penalty": 8000,
    "min_retry_interval": 30,
    "max_decide_concurrent": 20
  },
  "task_source": {
    "mode": "hybrid"
  },
  "review": {
    "approved_user_ids": [123998984,124862625,124581466,175728472],
    "fix_max_iterations": 10,
    "fix_max_turns": 30,
    "auto_commit_after_fix": true
  }
}
