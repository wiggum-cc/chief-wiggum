{
  "git": {
    "author_name": "Ralph Wiggum",
    "author_email": "ralph@wiggum.cc"
  },
  "claude": {
    "max_retries": 3,
    "initial_backoff_seconds": 5,
    "max_backoff_seconds": 60,
    "backoff_multiplier": 2
  },
  "workers": {
    "max_iterations": 50,
    "sleep_seconds": 2,
    "fix_worker_limit": 4
  },
  "hooks": {
    "enabled": true,
    "worker_hooks": "${CHIEF_HOME}/hooks/worker-hooks.json"
  },
  "paths": {
    "ralph_dir": ".ralph",
    "kanban_file": "kanban.md",
    "results_dir": "results",
    "workers_dir": "workers",
    "logs_dir": "logs"
  },
  "rate_limit": {
    "threshold_prompts": 22000,
    "threshold_boundary": 1769349244
  },
  "review": {
    "approved_authors": ["copilot", "dependabot", "github-actions[bot]", "dependabot[bot]", "renovate[bot]", "codecov[bot]"],
    "fix_max_iterations": 10,
    "fix_max_turns": 30,
    "auto_commit_after_fix": true
  }
}
